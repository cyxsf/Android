<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zzz"
    tools:context=".Register2">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="管理员注册界面"
        android:textSize="25sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/manager_id"
        android:text="编号："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/manager_pwd"
        android:text="密码："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/manager_id"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/manager_pwd2"
        android:text="密码："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/manager_pwd"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/manager_name"
        android:text="姓名："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/manager_pwd2"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/manager_age"
        android:text="年龄："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/manager_name"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/phone"
        android:text="电话："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/manager_age"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/text_id"
        android:hint="请输入编号"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/manager_id"
        app:layout_constraintLeft_toRightOf="@id/manager_id"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_pwd"
        android:hint="请输入密码"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="280dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/manager_pwd"
        app:layout_constraintLeft_toRightOf="@id/manager_pwd"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_pwd2"
        android:hint="再次输入密码"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="280dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/manager_pwd2"
        app:layout_constraintLeft_toRightOf="@id/manager_pwd2"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_name"
        android:hint="请输入姓名"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/manager_name"
        app:layout_constraintLeft_toRightOf="@id/manager_name"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_age"
        android:hint="请输入年龄"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/manager_age"
        app:layout_constraintLeft_toRightOf="@id/manager_age"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_phone"
        android:hint="请输入电话"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/phone"
        app:layout_constraintLeft_toRightOf="@id/phone"
        android:layout_marginRight="20dp" />


    <View
        android:id="@+id/button_box"
        android:layout_height="120dp"
        android:layout_width="280dp"
        app:layout_constraintTop_toBottomOf="@id/text_phone"
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/button_box"
        app:layout_constraintTop_toTopOf="@id/button_box" />

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape"
        android:text="取消"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

</android.support.constraint.ConstraintLayout>