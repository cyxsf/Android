<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="注册界面"
        android:textSize="35sp"/>

    <EditText
        android:id="@+id/re2_input_account_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:ems="10"
        android:hint="请输入用户名"
        android:inputType="phone" />

    <requestFocus />

    <EditText
        android:id="@+id/re2_input_password_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re2_input_account_et"
        android:layout_below="@+id/re2_input_account_et"
        android:layout_marginTop="14dp"
        android:hint="请输入密码"
        android:inputType="textPassword"></EditText>

    <ImageView
        android:id="@+id/iv_password"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/re2_input_account_et"
        android:layout_below="@id/re2_input_account_et"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/re2_input_password2_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re2_input_password_et"
        android:layout_below="@+id/re2_input_password_et"
        android:layout_marginTop="14dp"
        android:hint="请再次输入密码"
        android:inputType="textPassword"></EditText>

    <ImageView
        android:id="@+id/iv_password2"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/re2_input_account_et"
        android:layout_below="@id/re2_input_password_et"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re2_input_account_et"
        android:layout_below="@+id/re2_input_password2_et"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/re2_input_account_et"
        android:layout_below="@+id/register_btn"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape"
        android:text="取消"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>