<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="登录界面"
        android:textSize="35sp"/>

    <EditText
        android:id="@+id/login_input_account_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:ems="10"
        android:hint="请输入手机号/用户名"
        android:inputType="phone" />

    <requestFocus />

    <EditText
        android:id="@+id/login_input_password_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_input_account_et"
        android:layout_below="@+id/login_input_account_et"
        android:layout_marginTop="14dp"
        android:hint="请输入密码"
        android:inputType="textPassword"></EditText>

    <ImageView
        android:id="@+id/iv_password"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/login_input_account_et"
        android:layout_below="@id/login_input_account_et"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/login_input_code_et"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_input_password_et"
        android:layout_below="@+id/login_input_password_et"
        android:layout_marginTop="14dp"
        android:hint="请输入验证码"></EditText>

    <ImageView
        android:id="@+id/login_code"
        android:layout_width="128dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/login_input_account_et"
        android:layout_alignTop="@+id/login_input_code_et" />

    <LinearLayout
        android:id="@+id/login_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/login_input_code_et"
        >
        <CheckBox
            android:id="@+id/checkBox_password"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:checked="false"
            android:text="记住密码"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/findpwd"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            style="?android:attr/borderlessButtonStyle"
            android:text="忘记密码?"
            android:textSize="20sp" />

    </LinearLayout>

    <Button
        android:id="@+id/login_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_input_account_et"
        android:layout_below="@+id/login_linear"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/login_input_account_et"
        android:layout_below="@+id/login_btn"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>