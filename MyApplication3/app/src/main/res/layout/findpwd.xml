<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:text="重置密码"
        android:textSize="35sp"/>

    <EditText
        android:id="@+id/find_input_phone_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:ems="10"
        android:hint="请输入手机号"
        android:inputType="phone" />

    <requestFocus />

    <EditText
        android:id="@+id/find_input_code_et"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/find_input_phone_et"
        android:layout_below="@+id/find_input_phone_et"
        android:layout_marginTop="14dp"
        android:hint="请输入验证码"
        android:inputType="textPassword"></EditText>

    <Button
        android:id="@+id/find_request_code_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/find_input_phone_et"
        android:layout_alignTop="@+id/find_input_code_et"
        android:text="获取验证码" />

    <EditText
        android:id="@+id/find_input_password_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/find_input_phone_et"
        android:layout_below="@+id/find_input_code_et"
        android:layout_marginTop="14dp"
        android:hint="请输入新密码"
        android:inputType="textPassword"></EditText>

    <ImageView
        android:id="@+id/iv_password"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/find_input_phone_et"
        android:layout_below="@id/find_input_code_et"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/find_input_password2_et"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/find_input_phone_et"
        android:layout_below="@+id/find_input_password_et"
        android:layout_marginTop="14dp"
        android:hint="请再次输入新密码"
        android:inputType="textPassword"></EditText>

    <ImageView
        android:id="@+id/iv_password2"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignRight="@id/find_input_phone_et"
        android:layout_below="@id/find_input_password_et"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/find_commit_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/find_input_code_et"
        android:layout_below="@+id/find_input_password2_et"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/find_return_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/find_input_code_et"
        android:layout_below="@+id/find_commit_btn"
        android:layout_marginTop="14dp"
        android:background="@drawable/shape"
        android:text="取消"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>