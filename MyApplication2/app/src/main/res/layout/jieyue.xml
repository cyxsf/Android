<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/zzz"
    tools:context=".Jieyue">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图书界面"
        android:textSize="35sp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/book_id"
        android:text="序号："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/book_name"
        android:text="名称："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/book_id"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/book_author"
        android:text="作者："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/book_name"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/book_pub"
        android:text="出版社："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/book_author"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/book_num"
        android:text="数量："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/book_pub"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/book_sort"
        android:text="分类："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/book_num"
        android:layout_marginTop="18dp"/>

    <TextView
        android:id="@+id/book_record"
        android:text="日期："
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/book_sort"
        android:layout_marginTop="18dp"/>

    <EditText
        android:id="@+id/text_id"
        android:hint="请输入序号"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/book_id"
        app:layout_constraintLeft_toRightOf="@id/book_id"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_name"
        android:hint="请输入名称"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/book_name"
        app:layout_constraintLeft_toRightOf="@id/book_name"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_author"
        android:hint="请输入作者"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/book_author"
        app:layout_constraintLeft_toRightOf="@id/book_author"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_pub"
        android:hint="请输入出版社"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/book_pub"
        app:layout_constraintLeft_toRightOf="@id/book_pub"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_num"
        android:hint="请输入数量"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/book_num"
        app:layout_constraintLeft_toRightOf="@id/book_num"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_sort"
        android:hint="请输入分类"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/book_sort"
        app:layout_constraintLeft_toRightOf="@id/book_sort"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/text_record"
        android:hint="请输入日期"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="0dp"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/book_record"
        app:layout_constraintLeft_toRightOf="@id/book_record"
        android:layout_marginRight="20dp" />

    <View
        android:id="@+id/button_box"
        android:layout_height="120dp"
        android:layout_width="280dp"
        app:layout_constraintTop_toBottomOf="@id/text_record"
        android:layout_marginTop="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/button_box"
        app:layout_constraintTop_toTopOf="@id/button_box" />

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape"
        android:text="取消"
        android:textColor="#ffffff"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="@id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button1" />

</android.support.constraint.ConstraintLayout>